<idea-plugin url="https://github.com/JetBrains-Research/DeepBugsPlugin">
    <name>DeepBugs for JavaScript</name>
    <id>DeepBugsJavaScript</id>
    <vendor url="https://research.jetbrains.org/">jetbrains-research</vendor>
    <description><![CDATA[
    <p>Finds potential bugs and code quality issues for JavaScript using deep learning models.</p>

    <p>Detects several types of bugs, including incorrect function arguments, incorrect comparison, and others, based on extracted code semantics.
    Provides inspection strictness configuration for each bug type.</p>

    <p>Deep learning models are inspired by DeepBugs.</p>

    <p>To configure, open <b>Preferences/Settings | Tools | DeepBugs for JavaScript</b>.</p>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>

    <extensionPoints>
        <extensionPoint qualifiedName="dbp.statistics.jsProjectStateCollector"
                        interface="org.jetbrains.research.deepbugs.common.ide.fus.collectors.state.ProjectStateCollector"/>
    </extensionPoints>

    <extensions defaultExtensionNs="dbp.statistics">
        <jsProjectStateCollector implementation="org.jetbrains.research.deepbugs.common.ide.fus.collectors.state.InspectionStateCollector"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationInitializedListener implementation="org.jetbrains.research.deepbugs.common.ide.fus.service.scheduler.DeepBugsLoggingScheduler"/>

        <statistic.eventLog.eventLoggerProvider implementation="org.jetbrains.research.deepbugs.common.ide.fus.DeepBugsEventLoggerProvider"/>

        <localInspection language="JavaScript" groupPath="JavaScript"
                         displayName="DeepBugs for JavaScript: Possibly incorrect operand"
                         groupKey="deepbugs.javascript.group.name"
                         enabledByDefault="true"
                         bundle="DeepBugsJavaScriptBundle"
                         implementationClass="org.jetbrains.research.deepbugs.javascript.ide.inspections.JSDeepBugsBinOperandInspection"/>

        <localInspection language="JavaScript" groupPath="JavaScript"
                         displayName="DeepBugs for JavaScript: Possibly incorrect operator"
                         groupKey="deepbugs.javascript.group.name"
                         enabledByDefault="true"
                         bundle="DeepBugsJavaScriptBundle"
                         implementationClass="org.jetbrains.research.deepbugs.javascript.ide.inspections.JSDeepBugsBinOperatorInspection"/>

        <localInspection language="JavaScript" groupPath="JavaScript"
                         displayName="DeepBugs for JavaScript: Possibly wrong order of function arguments"
                         groupKey="deepbugs.javascript.group.name"
                         enabledByDefault="true"
                         bundle="DeepBugsJavaScriptBundle"
                         implementationClass="org.jetbrains.research.deepbugs.javascript.ide.inspections.JSDeepBugsSwappedArgsInspection"/>

        <errorHandler implementation="org.jetbrains.research.deepbugs.common.ide.error.DeepBugsErrorReporter"/>

        <applicationService serviceImplementation="org.jetbrains.research.deepbugs.javascript.JSDeepBugsConfig"/>
        <applicationConfigurable groupId="tools" instance="org.jetbrains.research.deepbugs.javascript.ide.ui.JSDeepBugsConfigurable"/>
        <backgroundPostStartupActivity implementation="org.jetbrains.research.deepbugs.common.model.ModelManager"/>
    </extensions>
</idea-plugin>
