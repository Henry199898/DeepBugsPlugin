<idea-plugin url="https://github.com/ml-in-programming/DeepBugsPlugin">
    <name>DeepBugsPlugin</name>
    <id>org.jetbrains.research.groups.ml_methods.deepbugs</id>
    <vendor email="timofey.bryksin@gmail.com" url="https://research.jetbrains.org/ru/groups/ml_methods">Timofey Bryksin</vendor>
    <version>0.1</version>
    <description><![CDATA[
    DeepBugsPlugin provides several code inspections for bug detection

    <h4>Using inspections</h4>
    <ol>
        <li>Select  <code>Analyze | Run inspection by name...</code>
            or <code>Code | Run inspection by name...</code>menu item</li>
        <li>Select the desired code inspection</li>
        <li>Set inspection options and click OK</li>
    </ol>
    <h4>Available code inspections</h4>
    <ul>
        <li>DeepBugs: Possibly incorrect binary operator</li>
    </ul>
    Threshold is configurable and can be set manually in <code>Preferences/Settings | Tools | DeepBugs</code>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <inspectionToolProvider implementation="org.jetbrains.research.groups.ml_methods.deepbugs.DeepBugsProvider"/>
        <localInspection implementationClass="org.jetbrains.research.groups.ml_methods.deepbugs.DeepBugsBinOperatorInspection"
                         displayName="DeepBugs: Possibly incorrect binary operator" enabledByDefault="true" groupPath="Python/Probable Bugs"/>
        <errorHandler implementation="org.jetbrains.research.groups.ml_methods.deepbugs.error_reporting.GitHubErrorReporter"/>
        <applicationService serviceInterface="org.jetbrains.research.groups.ml_methods.deepbugs.settings.DeepBugsInspectionConfig" serviceImplementation="org.jetbrains.research.groups.ml_methods.deepbugs.settings.DeepBugsInspectionConfig"/>
        <applicationConfigurable groupId="tools" displayName="DeepBugs" instance="org.jetbrains.research.groups.ml_methods.deepbugs.settings.DeepBugsInspectionConfigurable"/>

    </extensions>
